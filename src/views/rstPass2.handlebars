<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="display-4 text-center mt-4 text-dark">REESTABLECER CONTRASEÑA</h1>
            <hr class="hr-divider">
        </div>
        <div id="resFetch" class="text-center"></div>

        <form id="rstPass2">
            {{#if error}}
            <div class="alert alert-danger">
                {{error}}
            </div>
            {{/if}}
            {{#if message}}
            <div class="alert alert-success">
                {{message}}
            </div>
            {{/if}}
            <div class="mb-3">
                <label for="email" class="form-label">Coloque su nueva contraseña:</label>
                <input type="password" class="form-control" id="pass1" name="password" placeholder="Ingrese contraseña">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Repita su nueva contraseña:</label>
                <input type="password" class="form-control" id="pass2" name="password2"
                    placeholder="Ingrese contraseña nuevamente">
            </div>
            <input type="text" id="token" value={{token}} hidden>
            <button type="submit" class="btn btn-primary btn-lg">Ingresar</button>
        </form>
    </div>
</div>
</div>
</div>
</div>

<script src="/js/rstPass2.js"></script>