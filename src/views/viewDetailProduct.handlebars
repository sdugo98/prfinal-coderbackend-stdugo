<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div id="cartUser" cart={{user.cart._id}}> </div>
      <div class="mt-4">
        <div id="resFetch" class="text-center"></div>
      </div>
      <h1 class="text-center mt-4 view-title">DETALLE DE PRODUCTO:</h1>
      <hr class="hr-divider" />

      <div class="card mt-4 p-2">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <h4 class="detailCart text-center">
              <div class="fw-bold">Título: {{getProductById.title}}</div>
              <div class="fw-bold">Descripción:
                {{getProductById.description}}</div>
              <div class="fw-bold">ID: {{getProductById._id}}</div>
              <div class="fw-bold">Stock: {{getProductById.stock}}</div>
              <div class="text-success">${{getProductById.price}}</div>
            </h4>
          </li>
        </ul>
        <div class="text-center mt-3">
          <div id="count"></div>
          {{#if (gt getProductById.stock 0)}} {{!-- gt segun doc de Handlebars helpers, es un comparador de valores --}}
          <button id="btnAddToCart" data-product-id="{{getProductById._id}}" class="btn btn-success">Agregar al
            Carrito</button>
          {{else}}
          <button class="btn btn-danger mt-2 disabled">No hay stock</button>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script src="/js/viewDetailProduct.js"></script>