<h1 class="text-center mt-4 view-title">Carts</h1>
<hr class="hr-divider" />

{{>menu2}}

<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title">CREAR CARRITO</h2>
          <form id="createCartForm">
            <div class="mb-3 form-group">
              <label for="cartTitle" class="form-label">TITULO</label>
              <input id="cartTitle" name="title" type="text" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary mt-2">CREAR</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-md-6 mt-3">
      <h2 class="text-center text-success">Accion realizada:</h2>
      <div id="resFetch" class="text-center"></div>
    </div>
  </div>

  <div id="containerCarts" class="mt-4">
    {{#each carts}}
    <div class="card mb-3">
      <div class="card-body">
        <h4 class="card-title">{{this.title}}</h4>
        <p class="card-text">ID: {{this.id}}</p>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script src="/js/viewCarts.js"></script>