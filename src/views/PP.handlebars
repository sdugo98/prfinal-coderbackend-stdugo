<div class="container mt-5">
    <h2>Prueba pagos Stripe</h2>
    <hr>
    <div class="mt-4">
        <div id="resFetch" class="text-center"></div>
    </div>
    <div class="form-group">
        <label for="importe">Importe a pagar</label>
        <input name="importe" id="importe" class="form-control m-2" value="{{total}}">
    </div>
    <button type="button" class="btn btn-primary mb-3" onclick="cargarMediosPago()">Confirmar compra</button>
    <div id="mediosPago" class="border border-info p-3 mb-3">
    </div>
    <button type="button" class="btn btn-success mb-3" onclick="pagar()">Pagar</button>
    <div id="resultado" class="border border-success p-3">
    </div>
</div>


<script src="https://js.stripe.com/v3/"></script>
<script src="/js/pagos.js"></script>